<addons>


<addon
	id="plugin.video.tvwin" version="2.0.06" name="TvWin" provider-name="wapo">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
        <import addon="plugin.video.youtube" version="3.0.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
                <platform>all</platform>
		<summary lang="es">TvWin</summary>
		<description lang="es">Tv online</description>
		<description lang="es">Television online agradecimientos a los compradores para seguir dando el mejor servicio</description>
		<description lang="es">Agradecimientos a los donadores para seguir dando el mejor servicio</description>
